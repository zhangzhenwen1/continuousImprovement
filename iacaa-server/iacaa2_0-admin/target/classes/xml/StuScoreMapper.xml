<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pzhu.iacaa2_0.mapper.StuScoreMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.pzhu.iacaa2_0.entity.StuScore">
        <result column="studentId" property="studentId" />
        <result column="courseId" property="courseId" />
        <result column="semesterId" property="semesterId" />
        <result column="assessmentName" property="assessmentName" />
        <result column="score" property="score" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        studentId, courseId, semesterId, assessmentName, score
    </sql>

    <select id="list" resultMap="BaseResultMap" parameterType="com.pzhu.iacaa2_0.entity.StuScore">
        select
        <include refid="Base_Column_List"></include>
        from t_stuScore
        <where>
            <trim prefixOverrides="AND">
                <if test="studentId != null and studentId !=''">
                    AND studentId = #{studentId}
                </if>
                <if test="courseId != null and courseId !=''">
                    AND courseId = #{courseId}
                </if>
                <if test="semesterId != null and semesterId !=''">
                    AND semesterId = #{semesterId}
                </if>
                <if test="assessmentName != null and assessmentName !=''">
                    AND assessmentName = #{assessmentName}
                </if>
            </trim>
        </where>
    </select>

    <update id="summaryByCheckLinkId"  parameterType="java.lang.Long">
        UPDATE t_check_link a
        set a.average_score = (
            SELECT AVG(score)
            from t_stu_score
            WHERE check_link_id = #{id}
            GROUP BY check_link_id)
        WHERE id = #{id}
    </update>

    <update id="summaryCheckLinkScoreById" parameterType="java.lang.Long">
        UPDATE t_check_link a
        set a.average_score = (
            SELECT AVG(score)
            from t_stu_score
            WHERE check_link_id = #{id}
            GROUP BY check_link_id)
        WHERE id = #{id}
    </update>

</mapper>
