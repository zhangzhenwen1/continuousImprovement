    <insert id="insertBatch" parameterType="com.pzhu.iacaa2_0.entityVo.CourseObjectiveVo">
        INSERT INTO t_courseObjective
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.objectiveId}, #{item.courseId}, #{item.cultivationId}, #{item.objectiveDescribe}, #{item.attributeId}, #{item.subAttributeId}, #{item.objectiveSupportRatio})
        </foreach>
        AS alias ON DUPLICATE KEY UPDATE
        objectiveDescribe=alias.objectiveDescribe,
        attributeId=alias.attributeId,
        subAttributeId=alias.subAttributeId,
        objectiveSupportRatio=alias.objectiveSupportRatio
    </insert>

    <delete id="remove" parameterType="com.pzhu.iacaa2_0.entity.CourseObjective">
        delete from t_courseObjective
        <where>
            <trim prefixOverrides="AND">
                <if test="objectiveId != null and objectiveId !=''">
                    AND objectiveId = #{objectiveId}
                </if>
                <if test="objectiveDescribe != null and objectiveDescribe !=''">
                    AND objectiveDescribe = #{objectiveDescribe}
                </if>
                <if test="courseId != null and courseId !=''">
                    AND courseId = #{courseId}
                </if>
                <if test="cultivationId != null and cultivationId !=''">
                    AND cultivationId = #{cultivationId}
                </if>
                <if test="attributeId != null and attributeId !=''">
                    AND attributeId = #{attributeId}
                </if>
                <if test="subAttributeId != null and subAttributeId !=''">
                    AND subAttributeId = #{subAttributeId}
                </if>
                <if test="objectiveSupportRatio != null and objectiveSupportRatio !=''">
                    AND objectiveSupportRatio = #{objectiveSupportRatio}
                </if>
            </trim>
        </where>
    </delete>

    <update id="summaryStuScore" parameterType="java.lang.Long">
        UPDATE t_courseObjective
        set stu_grade = (
            SELECT AVG(score)/5
            FROM `t_stu_evaluation`
            WHERE course_task = #{courseTaskId})
        WHERE id = #{courseTaskId} and id in (select distinct(course_task) from t_stu_evaluation)
    </update>

    <update id="coverNullToZero">
        UPDATE t_courseObjective set sys_grade = 0 WHERE isNULL(sys_grade)
    </update>

    <select id="randomlist" resultMap="voMap">
        select
        <include refid="Base_Column_List"></include>
        from t_courseObjective
        <where>
            <trim prefixOverrides="AND">
                <if test="courseTask.courseId != null and courseTask.courseId !=''">
                    AND course_id = #{courseTask.courseId}
                </if>
                <if test="courseTask.targetId != null and courseTask.targetId !=''">
                    AND target_id = #{courseTask.targetId}
                </if>
                <if test="courseTask.year != null and courseTask.year !=''">
                    AND year = #{courseTask.year}
                </if>
                <if test="courseTask.stuGrade != null">
                    AND stu_grade = #{courseTask.stuGrade}
                </if>
            </trim>
        </where>
        order by rand() limit #{randomSize}
    </select>

    <select id="getByCourseId" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"></include>
        from t_courseObjective where course_id = #{id} order by year desc, course_id asc
    </select>




</mapper>
